@{
    ViewData["Title"] = "Grade Calculator";
}

@model CalculatorModel
<!--GRADE CALCULATOR-->

<h2>Grade Calculator</h2>

<fieldset style="width:fit-content;">
    <legend>Enter percentages as whole number (i.e. 100): </legend>

    <form method="post">
        <label for="assignment">Assignments: </label>
        <input type="number" id="assignment" asp-for="Assignment" />
        <br />
        <label for="group">Group Project: </label>
        <input type="number" id="group" asp-for="Group" />
        <br />
        <label for="quiz">Quizzes: </label>
        <input type="number" id="quiz" asp-for="Quiz" />
        <br />
        <label for="exam">Exams: </label>
        <input type="number" id="exam" asp-for="Exam" />
        <br />
        <label for="intex">INTEX: </label>
        <input type="number" id="intex" asp-for="Intex" />
        <br />
        <input id="calc" type="submit" value="Calculate" />

        <div asp-validation-summary="All"></div>
    </form>

</fieldset>

<p>&nbsp;</p>

<h3 id="grade">Your grade is... </h3>

<script src="~/js/mission2.js"></script>